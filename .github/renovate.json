{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>Boshen/renovate"],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "groupName": "oxc",
      "matchPackagePatterns": ["oxc"],
      "schedule": ["at any time"],
      "automergeType": "pr"
    },
    {
      "groupName": "swc",
      "matchPackagePatterns": ["swc"],
      "schedule": ["at any time"],
      "automergeType": "pr"
    },
    {
      "groupName": "biome",
      "matchPackagePatterns": ["biome"],
      "schedule": ["at any time"],
      "automergeType": "pr"
    }
  ]
}
